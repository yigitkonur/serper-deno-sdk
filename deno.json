{
  "name": "@yigitkonur/serper-deno-sdk",
  "version": "1.0.1",
  "description": "Type-safe Deno SDK for Serper.dev Google Search API - Web, Images, News, Videos, Shopping, Maps, Scholar, Patents",
  "license": "MIT",
  "exports": "./mod.ts",

  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },

  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"],
      "include": [
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "camelcase",
        "single-var-declarator",
        "no-console",
        "ban-untagged-todo"
      ]
    },
    "exclude": [
      "scripts/",
      "examples/",
      "supabase/"
    ]
  },

  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "singleQuote": false,
    "proseWrap": "preserve"
  },

  "test": {
    "include": ["tests/**/*_test.ts"]
  },

  "publish": {
    "include": [
      "mod.ts",
      "src/**/*.ts",
      "types/**/*.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/**",
      "examples/**",
      "scripts/**",
      "supabase/**",
      ".github/**"
    ]
  },

  "tasks": {
    "test": "deno test --allow-env --allow-read tests/",
    "test:coverage": "deno test --allow-env --allow-read --coverage=cov_profile tests/",
    "test:doc": "deno test --doc",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check mod.ts",
    "doc": "deno doc mod.ts",
    "doc:lint": "deno doc --lint mod.ts",
    "publish:dry": "deno publish --dry-run",
    "bump:patch": "deno run --allow-read --allow-write --allow-run scripts/bump-version.ts patch",
    "bump:minor": "deno run --allow-read --allow-write --allow-run scripts/bump-version.ts minor",
    "bump:major": "deno run --allow-read --allow-write --allow-run scripts/bump-version.ts major",
    "all": "deno task fmt && deno task lint && deno task check && deno task doc:lint && deno task test"
  }
}
